---
import Header from '../components/Header.astro'; //Importing Header component//
import '../styles/global.css';  //Importing global CSS file for styling//
import Footer from '../components/Footer.astro'; //Imporitng Footer Component 
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} >
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"> <!--Bootstrap CSS for styling -->
    <title>Weather Website</title>
  </head>

  <body>
  <Header /> <!--Header Component  setting  -->

  <div class="container- pt-5 justify-content-center align-items-center pt-5 bg-primary text-white">
    <h1> Check the Weather </h1>  <!--Main Heading -->
    </div>

     <!--Inline CSS Styling of API component -->
    <style>
    body {
        font-family: sans-serif; /* Set font of body*/ 
        text-align: center;     /* Center-align text */
        color: white;       /* Set text color to white */
        font-size: 32px;       /* Set font size */
        background-color: #6fa6ed; /* Background color of the body */
    }
    
    input {
        margin-top: 2rem;   /* Add space above the input field */
        padding: 1rem;     /* Add padding inside the input field */
    }
    
    .weather_description {
        color: white;   /* Set color for the weather description */
        margin-top: 2rem;  /* Space above the weather description */
    }  
    </style>

 <!--  User to input  the city name and a button to submit -->
<h1>What is the weather like today in...</h1>
<input type="text" id="cityInput" name="cityInput" placeholder="Input City" />
 <button>Submit</button>  <!--Submit button -->

 <!--Error message and city name -->
 <h5 id="error"></h5>
<h3 id="city"></h3>
<div id="weather"></div>

<!--Bootstrap container for fun facts -->
<div class="container">
<!--  Bootstrap Carousel -->
<div id="demo" class="carousel slide" data-bs-ride="carousel">

  <!-- Indicators/dots to show 3 slides -->
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#demo" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#demo" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  
  <!-- The slideshow/carousel -->
  <h3>Weather fun facts</h3>
  <div class="carousel-inner">
   
    <!--Carousel items with facts -->
    <div class="carousel-item active">
      <!--Slide 1 -->
      <img src="/public/Winter.jpg" alt="Winter" class="d-block w-100"> <!--Winter Image -->
      <div class="carousel-caption d-none d-md-block" style="color: black;"> <!--Colour black as couldn't see text when text white like other slides -->
        <p>The coldest temperature ever officially recorded was -89.2 degrees celsius in Antarctica</p>
      </div>
    </div>

    <!--Slide 2 -->
    <div class="carousel-item">
      <img src="/public/Thunderstorm.jpg" alt="Thunder" class="d-block w-100"> <!--Thunderstorm Image -->
      <div class="carousel-caption d-none d-md-block">
       
        <p>About 2000 thunderstors are occuring on Earth every minute</p>
      </div> 
    </div>

    <!--Slide 3 -->
    <div class="carousel-item">
      <img src="/public/Fog.jpg" alt="Fog" class="d-block w-100">  <!--Fog Image -->
      <div class="carousel-caption d-none d-md-block">
        <p>Fog is just low cloud</p>
      </div>  
    </div>
  </div>
  
  <!-- Left and right controls/icons for Carousel  -->
  <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" ></span> <!--Previous slide -->

  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
    <span class="carousel-control-next-icon"></span>  <!--Next Slide -->
  </button>
</div>

<div class="container-fluid mt-3">
 
</div>
</div>


<Footer />  <!--Footer COmponent  -->

<!--JavaScript for Hamburger Menu  -->
<script>
  document.querySelector('.hamburger')?.addEventListener('click', () => {
    document.querySelector('.nav-links')?.classList.toggle('expanded');
  });
</script>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>  <!--Bootstrap bundle for JS functionality -->

<script src="../scripts/script.js"></script>  <!--JS for this page -->

</body>

</html>
